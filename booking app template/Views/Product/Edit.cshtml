@using booking_app_template.Data;

@model NewProductVM

@{
    ViewData["Title"] = "Update Product";
}


<div class="text-light container-fluid text-center" style="max-width:600px;">

    @if (TempData["Error"] != null)
    {
        <div class="col-md-12 alert alert-danger text-light">
            <span><b>Sorry!</b> - @TempData["Error"] </span>
        </div>
    }
      
        <div class="col-md-8 offset-2 text-light text-center">
        <p>
            <h4>Update Product</h4>
        </p>
        <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <!-- Top row with two columns -->
                <div class="row">
                    <!-- Left column -->
                    <div class="col-md-10">
                        <div class="form-group">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                            
                        <div class="form-group">
                            <label asp-for="Price" class="control-label"></label>
                            <input asp-for="Price" type="number" class="form-control" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ImageURL" class="control-label"></label>
                            <input asp-for="ImageURL" class="form-control" />
                            <span asp-validation-for="ImageURL" class="text-danger"></span>
                        </div>
                    </div>
                    <!-- Right column -->
                    <div class="col-md-6">
                            
                    </div>
                    <div class="col-md-10">
                        <div class="form-group">
                            <label asp-for="Description" class="control-label"></label>
                            <textarea asp-for="Description" class="form-control"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="col-md-10  text-center" style="margin-top:20px; margin-bottom:20px">
                    <img width="100%" id="ImageUrlPreview" />
                </div>

                <div class="form-group text-center">
                    <input type="submit" value="Edit" class="btn btn-outline-success" />
                    <a class="btn btn-outline-secondary" asp-action="Index">Show all</a>
                    <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@Model.Id"><i class="bi bi-trash"></i>Delete </a>
                </div>

            </form>

        </div>
    
</div>

    


@section Scripts{
    <script>

        $(document).ready(function () {
            var output = document.getElementById("ImageUrlPreview");
            output.src = $("#ImageURL").val();
        });

        $("#ImageURL").on("change", function () {
            var output = document.getElementById("ImageUrlPreview");
            output.src = $(this).val();
        })
    </script>
}